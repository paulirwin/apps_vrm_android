<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="@dimen/spacing_medium"
              android:paddingBottom="@dimen/spacing_medium"
              android:paddingRight="@dimen/spacing_small"
              android:paddingLeft="@dimen/spacing_small">

    <LinearLayout
            android:background="@drawable/background_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

        <EditText
                android:id="@+id/et_io_name"
                style="@style/TextEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:hint="@string/io_hint_name"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"/>

        <ImageView
                android:id="@+id/iv_io_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_weight="1"
                android:background="@color/grey"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_battery_big"/>

        <nl.victronenergy.views.BetterButton
                style="@style/Button"
                android:id="@+id/button_io_update_image"
                android:layout_width="match_parent"
                android:text="@string/io_button_update_image"
                android:layout_height="@dimen/size_medium"/>

    </LinearLayout>

</LinearLayout>