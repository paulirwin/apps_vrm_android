<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context="nl.victronenergy.activities.TakePictureActivity"
                android:orientation="vertical"
                android:layout_centerInParent="true">

    <ProgressBar
        android:id="@+id/take_picture_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <nl.victronenergy.views.BetterTextView
        android:layout_below="@+id/take_picture_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_picture_uploading"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
