<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontFace" format="string"/>

    <!-- BetterTextView -->
    <declare-styleable name="BetterTextView">
        <attr name="fakeFocused" format="boolean"/>
        <attr name="fontFace"/>
    </declare-styleable>

    <!-- BetterEditText -->
    <declare-styleable name="BetterEditText">
        <attr name="fontFace"/>
    </declare-styleable>

    <!-- BetterButton -->
    <declare-styleable name="BetterButton">
        <attr name="fontFace"/>
    </declare-styleable>

    <!-- SlidingMenu -->
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="viewAbove" format="reference"/>
        <attr name="viewBehind" format="reference"/>
        <attr name="behindOffset" format="dimension"/>
        <attr name="behindWidth" format="dimension"/>
        <attr name="behindScrollScale" format="float"/>
        <attr name="touchModeAbove">
            <enum name="margin" value="0"/>
            <enum name="fullscreen" value="1"/>
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0"/>
            <enum name="fullscreen" value="1"/>
        </attr>
        <attr name="shadowDrawable" format="reference"/>
        <attr name="shadowWidth" format="dimension"/>
        <attr name="fadeEnabled" format="boolean"/>
        <attr name="fadeDegree" format="float"/>
        <attr name="selectorEnabled" format="boolean"/>
        <attr name="selectorDrawable" format="reference"/>

        <!-- ActionBar slide icon  (up indicator replacement) -->
        <attr name="actionBarIconSlideable" format="boolean"/>
        <attr name="actionBarSlideIconDrawable" format="reference"/>
        <attr name="actionBarSlideIconOpenContentDesc" format="reference"/>
        <attr name="actionBarSlideIconCloseContentDesc" format="reference"/>
    </declare-styleable>

</resources>